@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @*<form method="post">*@
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {

                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First name</label>
                            @Html.TextBoxFor(i => i.WriterName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.WriterName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Email</label>
                            @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @Html.TextBoxFor(i => i.Password, new { @class = "form-control", Type = "password" })
                            @Html.ValidationMessageFor(i => i.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Confirm Password</label>
                            @Html.TextBoxFor(i => i.ConfirmPassword, new { @class = "form-control", Type = "password" })
                            @Html.ValidationMessageFor(i => i.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                     
                    </div>



                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Image Path</label>
                            @Html.TextBoxFor(i => i.WriterImage, new { @class = "form-control" })
                            @Html.ValidationMessageFor(i => i.WriterImage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#" id="btn1">By clicking Signup, I agree to your terms</a>
                    </p>

                }

            </div>
        </div>
    </div>
    <script>
        $("#btn1").click(function () {
            swal("Information and news e-mails will continue to be sent through the e-mail address you have given to our site, reaching the spam level.");
        })
    </script>
</section>