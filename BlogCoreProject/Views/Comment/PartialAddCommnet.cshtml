<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form action=/Comment/PartialAddCommnet/ method="post" id="AddComment">
            <input class="form-control" type="text" name="CommentUsername" placeholder="Username" required="" id="CommentUsername">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Title" required="" id="CommentTitle">

            @*            <input class="form-control" type="text" name="CommentContent" placeholder="Content" required="">*@

            <textarea class="form-control" name="CommentContent" placeholder="Message..." required="" id="CommentContent"></textarea>
            <button type="submit" class="btn btn-primary submit">Submit</button>
        </form>
    </div>
</div>



<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
