@using EntityLayer.Concrete
@model List<Comment> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>


<body>
     
                <div class="row"> 
                    <div class="col-lg-12">
                        <div class="ibox ">
                            <div class="ibox-title">
                                <h5>Hover Table  </h5>
                                <div class="ibox-tools">
                                    <a class="collapse-link">
                                        <i class="fa fa-chevron-up"></i>
                                    </a>
                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                        <i class="fa fa-wrench"></i>
                                    </a>
                                    <ul class="dropdown-menu dropdown-user">
                                        <li>
                                            <a href="#" class="dropdown-item">Config option 1</a>
                                        </li>
                                        <li>
                                            <a href="#" class="dropdown-item">Config option 2</a>
                                        </li>
                                    </ul>
                                    <a class="close-link">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="ibox-content">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>User</th>
                                            <th>Title</th>
                                            <th>Blog</th>
                                            <th>Date</th>
                                            <th>Score</th>
                                            <th>Delete</th>
                                            <th>Update</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.CommentUsername</td>
                                            <td class="text-navy"> <i class="fa fa-level-up"></i>@item.CommentTitle</td>

                                            <td>@item.blog.BlogTitle</td>
                                            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><span class="text-navy"><i class="fa fa-level-up"></i> @(item.BlogScore)</span></td>

                                            <td><a href="/AdminComment/DeleteCommet/@item.CommentId" class="btn btn-danger btn-sm">Delete</a></td>
                                            <td><a href="/AdminComment/DeleteCommet/@item.CommentId" class="btn btn-warning btn-sm">Delete</a></td>
                                        </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
 
  
</body>

</html>
