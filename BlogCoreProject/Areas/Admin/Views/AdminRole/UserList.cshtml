@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Username</th>
        <th>Role</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-success btn-sm"> Add Role</a></td>
        </tr>
    }
</table>
<a href="/Admin/AdminRole/Index" class="btn btn-secondary">Return Role List</a>